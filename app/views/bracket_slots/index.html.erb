<p id="notice"><%= notice %></p>

<h1>Listing Bracket Slots</h1>

<table>
  <thead>
    <tr>
      <th>Seedleft</th>
      <th>Seedright</th>
      <th>Slotnum</th>
      <th>Bracket</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bracket_slots.each do |bracket_slot| %>
      <tr>
        <td><%= bracket_slot.seedLeft %></td>
        <td><%= bracket_slot.seedRight %></td>
        <td><%= bracket_slot.slotNum %></td>
        <td><%= bracket_slot.bracket.id %></td>
        <td><%= link_to 'Show', bracket_slot %></td>
        <td><%= link_to 'Edit', edit_bracket_slot_path(bracket_slot) %></td>
        <td><%= link_to 'Destroy', bracket_slot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

