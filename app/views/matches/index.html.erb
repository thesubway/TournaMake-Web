<p id="notice"><%= notice %></p>

<h1>Listing Matches</h1>

<table>
  <thead>
    <tr>
      <th>Leftid</th>
      <th>Rightid</th>
      <th>Leftscore</th>
      <th>Rightscore</th>
      <th>Isfinished</th>
      <th>Bracket</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.leftId %></td>
        <td><%= match.rightId %></td>
        <td><%= match.leftScore %></td>
        <td><%= match.rightScore %></td>
        <td><%= match.isFinished %></td>
        <td><%= match.bracket.id if match.bracket != nil %></td>
        <td><%= match.group.id if match.group != nil %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

