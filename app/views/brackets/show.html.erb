<p id="notice"><%= notice %></p>

<p>
  <strong>Id:</strong>
  <%= @bracket.id %>
</p>

<p>
  <strong>IsStarted:</strong>
  <%= @bracket.isStarted %>
</p>

<p>
  <strong>Reseed:</strong>
  <%= @bracket.reseed %>
</p>

<p>
  <strong>IsFinished:</strong>
  <%= @bracket.isFinished %>
</p>

<p>
  <strong>Tournament:</strong>
  <%= @bracket.tournament.id %>
</p>

<% @bracket.matches.each do |match| %>
<!-- One table for each box score -->
  <table>
    <tr>
      <th>Entrants</th>
      <th>Score</th>
      <th>Status</th>
    </tr>
    <tr>
      <td><%= match.leftId %></td>
      <td><%= match.leftScore %></td>
    </tr>
    <tr>
      <td><%= match.rightId %></td>
      <td><%= match.rightScore %></td>
      <td> Final </td>
    </tr>
  </table>
<% end %>

<%= link_to 'Edit', edit_bracket_path(@bracket) %> |
<%= link_to 'Back', brackets_path %>
